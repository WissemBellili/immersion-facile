{
  "name": "root",
  "version": "1.0.0",
  "workspaces": [
    "front",
    "back",
    "shared",
    "libs/*"
  ],
  "scripts": {
    "prepare": "husky install && chmod a+x .husky/pre-commit && chmod a+x .husky/pre-push",
    "back": "pnpm --dir back",
    "front": "pnpm --dir front",
    "shared": "pnpm --dir shared",
    "cypress": "pnpm --dir cypress cypress:open",
    "lint:back": "eslint back/src --fix",
    "lint:front": "eslint front/src --fix",
    "lint:shared": "eslint shared/src --fix",
    "lint:libs": "eslint libs/ --fix",
    "lint": "eslint ./**/src/ --fix",
    "pre-commit": "pnpm --dir back format"
  },
  "devDependencies": {
    "husky": "^8.0.1"
  }
}
